; elmsmedia make file for local development
core = "7.x"
api = "2"

projects[drupal][version] = "7.x"
; include the d.o. profile base
includes[] = "drupal-org.make"

; +++++ Libraries +++++

; mediaelement
libraries[mediaelement][directory_name] = "mediaelement"
libraries[mediaelement][type] = "library"
libraries[mediaelement][destination] = "libraries"
libraries[mediaelement][download][type] = "get"
libraries[mediaelement][download][url] = "" ; TODO add download URI

; quail
libraries[quail][directory_name] = "quail"
libraries[quail][type] = "library"
libraries[quail][destination] = "libraries"
libraries[quail][download][type] = "get"
libraries[quail][download][url] = "" ; TODO add download URI

; elmsmedia
libraries[elmsmedia][directory_name] = "elmsmedia"
libraries[elmsmedia][type] = "profile"
libraries[elmsmedia][destination] = "../../profiles"
libraries[elmsmedia][download][type] = "get"
libraries[elmsmedia][download][url] = "http://ftp.drupal.org/files/projects/elmsmedia-7.x-1.x-dev.tar.gz"

